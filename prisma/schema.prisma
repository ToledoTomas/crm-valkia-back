datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  description String?
  size      String?
  price     Float
  stock     Int
  category  String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Customers {
  id        Int      @id @default(autoincrement())
  firstName      String
  lastName  String
  email     String   @unique
  phone     String
}